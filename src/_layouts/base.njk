            <script>
                const toggleBtn = document.getElementById('menu-toggle');
                const mobileMenu = document.getElementById('mobile-menu');
                const hamburgerIcon = toggleBtn.querySelector('.hamburger-icon');
                const hamburgerLines = hamburgerIcon.querySelectorAll('.hamburger-line');
                const xOverlay = hamburgerIcon.querySelector('.x-overlay');
                const xLines = hamburgerIcon.querySelectorAll('.x-line');

                // Initialize menu in hidden position
                mobileMenu.style.transform = 'translateY(-100%)';

                toggleBtn.addEventListener('click', () => {
                    const isOpen = mobileMenu.style.transform === 'translateY(0px)' || mobileMenu.style.transform === '';

                    // Animate hamburger to X
                    if (!isOpen) {
                        // Opening animation
                        hamburgerIcon
                            .classList
                            .add('menu-open');

                        // Animate hamburger lines
                        hamburgerLines.forEach((line, index) => {
                            setTimeout(() => {
                                line.style.transform = 'scaleX(0)';
                                line.style.opacity = '0';
                            }, index * 100);
                        });

                        // Show X overlay
                        setTimeout(() => {
                            xOverlay.style.opacity = '1';
                            xLines.forEach((line, index) => {
                                setTimeout(() => {
                                    line.style.transform = `translateY(-50%) rotate(${index === 0
                                        ? '45'
                                        : '-45'}deg) scaleX(1)`;
                                }, index * 150);
                            });
                        }, 300);

                        // Slide menu down
                        mobileMenu.style.transform = 'translateY(0px)';

                    } else {
                        // Closing animation
                        hamburgerIcon
                            .classList
                            .remove('menu-open');

                        // Hide X overlay
                        xOverlay.style.opacity = '0';
                        xLines.forEach(line => {
                            line.style.transform = 'translateY(-50%) rotate(0deg) scaleX(0)';
                        });

                        // Restore hamburger lines to exact original positions
                        setTimeout(() => {
                            hamburgerLines.forEach((line, index) => {
                                setTimeout(() => {
                                    line.style.transform = 'scaleX(1)';
                                    line.style.opacity = '1';
                                    // Reset any additional transforms to ensure exact positioning
                                    if (index === 0) {
                                        line.style.top = '4px'; // top-1
                                    } else if (index === 1) {
                                        line.style.top = '50%';
                                        line.style.transform = 'translateY(-50%) scaleX(1)';
                                    } else if (index === 2) {
                                        line.style.bottom = '4px'; // bottom-1
                                        line.style.top = 'auto';
                                    }
                                }, index * 100);
                            });
                        }, 200);

                        // Slide menu up
                        mobileMenu.style.transform = 'translateY(-100%)';
                    }
                });
            </script>

