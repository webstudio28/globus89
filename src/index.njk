<!-- GSAP Hero Animations -->
<script>
  // Wait for DOM to be ready
  document.addEventListener('DOMContentLoaded', function () {
    // Set initial states
    gsap.set('#hero-title', {
      y: 50,
      opacity: 0
    });
    gsap.set('#hero-line', {
      scaleX: 0,
      transformOrigin: 'left'
    });
    gsap.set('#hero-subtitle', {
      y: 30,
      opacity: 0
    });
    gsap.set('#hero-buttons', {
      y: 30,
      opacity: 0
    });

    // Create timeline for hero animations
    const heroTl = gsap.timeline({delay: 0});

    // Animate hero title (slide up from bottom)
    heroTl
      .to('#hero-title', {
        y: 0,
        opacity: 1,
        duration: 1,
        ease: 'power3.out'
      })
      // Animate the red line (scale from left)
      .to('#hero-line', {
        scaleX: 1,
        duration: 0.8,
        ease: 'power2.out'
      }, '-=0.5')
      // Animate subtitle (slide up from bottom)
      .to('#hero-subtitle', {
        y: 0,
        opacity: 1,
        duration: 0.7,
        ease: 'power3.out'
      }, '-=0.3')
      // Animate buttons (slide up from bottom)
      .to('#hero-buttons', {
        y: 0,
        opacity: 1,
        duration: 0.7,
        ease: 'power3.out'
      }, '-=0.4');
  });
</script>

